        <name>Show event cost</name>
        <onclick/>
        <order>100</order>
        <script><![CDATA[function executeUIAction(current, previous) {
	var cost = 0;
	var burget = current.burget;
	var markEvent = current.sys_id;
	var eventName = current.name;
	//Get the total cost of all equipment for this event	
	var equipment = new GlideRecord('x_1316055_event_ma_equipment_request');
	equipment.addQuery('marketing_event', markEvent);
	equipment.query();
	while (equipment.next()) {
		cost = cost + parseFloat(equipment.cost.getCurrencyValue());
	}
	//Display cost and budget error
	gs.addInfoMessage('The totale cost of' + eventName + 'is' + cost + '.');
	if(cost>burget){
		gs.addErrorMessage('Equipment cost for '+eventName+'exceed the event budget.');
	}
	action.setRedirectURL(current);
	(current, typeof previous != 'undefined' ?  previous : null);


}
]]></script>
